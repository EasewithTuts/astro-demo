---
export interface Props {
    name : string;
    date : string;
    link : string;
}

const {name,date,link} = Astro.props;
---
<div>
<h1><a href={link}>{name} {date}</a></h1>
</div>
<style>
    div {
    display : flex;
    flex-direction : row;
    justify-content : center;
    };

    a:link {
      text-decoration : none;
      color : black;  
    };
</style>